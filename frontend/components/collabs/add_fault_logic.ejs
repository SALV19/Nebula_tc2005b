<script>
  function addFault() {
    const popup = document.getElementById("fault-pop-up");
    if (popup) {
      popup.style.display = "flex";
    }
  }
  function closeFaultPopup() {
    const popup = document.getElementById("fault-pop-up");
    if (popup) {
      popup.style.display = "none";
    }
  }
</script>