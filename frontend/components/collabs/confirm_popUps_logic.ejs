<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    const successData = <%- JSON.stringify(successData || null) %>;

    if (successData) {
        Swal.fire({
            title: "Collaborator added!",
            html: `<p>The collaborator was successfully registered.</p>
                    <p>Send this information so he can access.</p>
                    <p><b>Correo:</b> ${successData.email}</p>
                    <p><b>Contrase√±a:</b> ${successData.password}</p>`,
            icon: "success",
            customClass: {
                confirmButton: 'btn-ok' 
            }
        }).then(() => {
            window.history.replaceState({}, document.title, window.location.pathname);
        });
    }
});
</script>
