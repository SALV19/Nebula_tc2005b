<%- include('../components/nav_bar.ejs') %> 
<link rel="stylesheet" href="/css/reports.css">

<div class = "hero-body">
    <div class="container-reports">
        <input type="hidden" id="_csrf" value=<%= csrfToken %>>

        <div class="column is-one-fifth">
            <select class = "line-input" name="collab" id="collab_reports">
                <option value="" disabled selected>Collaborator</option>
                <% for (let i = 0; i < collabs.length; i++) { %>
                    <option value="<%= collabs[i].id_colaborador %>">
                        <%= collabs[i].nombre + " " + collabs[i].apellidos%></option>
                    <% } %>
            </select>
        </div>
        <div class="column is-one-fifth">
            <select class = "line-input" name="department" id="department_reports">
                <option value="" disabled selected>Company</option>
                <% for (let i = 0; i < empresa.length; i++) { %>
                    <option value="<%= empresa[i].nombre_empresa %>">
                        <%= empresa[i].nombre_empresa%></option>
                    <% } %>
            </select>
        </div>
        <div class="column is-one-fifth">
            <select class = "line-input" name="department" id="department_reports">
                <option value="" disabled selected>Department</option>
                <% for (let i = 0; i < departamento.length; i++) { %>
                    <% for (let j = 0; j < departamento[i][0].length; j++) { %>
                    <option value="<%= departamento[i].nombre_departamento %>">
                        <% console.log("d",departamento[i])%>
                        <%= departamento[i][0][j].nombre_departamento%></option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div class="column is-one-fifth">
            <select class = "line-input" name="department" id="department_reports">
                <option value="" disabled selected>Period</option>
                <option value="1">Monthly</option>
                <option value="3">Trimester</option>
                <option value="6" >Semester</option>
                <option value="12" >Anually</option>
            </select>
        </div>
        <div class="column is-1">
            <i class="bi bi-download is-size-4 is-clickable"></i>
        </div>
            
        <hr/>


    </div>
</div>
<%- include('includes/_footer.ejs') %>